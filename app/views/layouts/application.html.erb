<!DOCTYPE html>
<html>
<head>
  <title>Microposts</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>
  <%= render 'layouts/header' %>
  <div class="container">
     <% if notice %>
      <div class="alert alert-info">
        <%= notice %>
      </div>
    <% end %>
    <% flash.each do |user_type, user| %> <!-- ここから -->
      <div class="alert alert-<%= user_type %>"><%= user %></div>
    <% end %> <!-- ここまで追加 -->
    <%= yield %>
  </div>
</body>
</html>